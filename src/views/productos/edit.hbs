<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/productos/edit/{{link.id}}" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{link.nombre}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="tipo" class="form-control" placeholder="Tipo" value="{{link.tipo}}">
                </div>
                <div class="form-group">
                    <input type="number" name="cantidad" class="form-control" placeholder="Cantidad" value="{{link.cantidad}}">
                </div>
                <div class="form-group">
                    <input type="text" name="marca" class="form-control" placeholder="Marca" value="{{link.marca}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="upload-image-file"></label>
                    <input type="file" class="form-control-file" name="imagen" id="imagen" placeholder="upload-image-file" aria-describedby="fileHelpId" required> 
                    <small id="fileHelpId" class="form-text text-muted">Please select the image to be uploaded...</small>
                </div>

                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>